}

/* --- Quest Card Styling --- */
.quest-card {
    /* To make all four cards equal width */
    flex: 1 1 23%; /* flex-grow: 1, flex-shrink: 1, flex-basis: 23% (approx 1/4 of container minus gap) */
    
    background-color: #1e1e1e; /* Darker background for the card */
    border: 1px solid #333;
    border-radius: 10px;
    padding: 15px;
    min-width: 200px; /* Ensures they don't get too small */
    transition: transform 0.2s, box-shadow 0.2s;
}

/* Hover effect for interactivity */
.quest-card:hover {
    transform: translateY(-3px); /* Slight lift */
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
}

/* Style the internal link to cover the whole card and remove link decoration */
.quest-link {
    text-decoration: none;
    color: inherit; /* Use the parent text color */
    display: block; /* Make the link a block element */
    height: 100%; /* Ensure it fills the card height */
}

/* Quest Header Styling */
.quest-card h3 {
    display: flex;
    justify-content: space-between; /* Pushes the arrow to the right */
